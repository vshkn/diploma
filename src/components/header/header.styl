@import url('https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap');

.logo_m
    width: 30vh


header {
    position: fixed;
    top: 0;
    width: 100%;
    background-color: rgba(27, 23, 23, 1);
    color: #fff;
    padding: 1.5vh 50px;
    box-sizing: border-box;
    transition: top 0.2s;
    display: flex;
    justify-content: space-between;
    z-index: 1000; 
}

.hidden {
    top: -130px; 
}

.under_header {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: rgba(238, 235, 221, 1);
    padding: 0.8vh 6vw;
    box-sizing: border-box;
    transition: top 0.3s;
}


.header_text {
    font-family: Inter;
    font-size: 2vh;
    font-weight: 400;
    transition: 0.2s;
    cursor: pointer;
}

.header_line {
    width: 0.1vw;
    height: 5.7vh;
    background: rgba(129, 0, 0, 1);
}

.header_text:hover {
    color: rgba(129, 0, 0, 1);
}

.input {
    width: 16vw;
    height: 1.8vw;
    background: rgba(129, 0, 0, 1);
    border-radius: 5px;
    display: flex;
    padding: 0 0.2vw;
    box-sizing: border-box;
    align-items: center;
    overflow: hidden;
}
.header_input
    background: none
    outline: none
    border none

.search_img {
    width: 1.4vw;
    height: 1.4vw;
}

input {
    background: none;
    color: white;
    font-family: Inter;
}

input::placeholder {
    color: white;
}

.right_p_h {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2.4vw;
}

.sing_up_sect {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1vw;
    font-family: Inter;
    font-size: 2vh;
}
.sing_up_sect p
    cursor: pointer

.red_line {
    width: 0.1vw;
    height: 5.7vh;
    background: rgba(129, 0, 0, 1);
}


#footer
    position relative
    margin 8vh 0 0 0
#img
    position absolute
    top -5vh
    left 5vh